<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/solid_black" >

    <ListView
        android:id="@+id/music_playlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/music_currsongtext"
        android:layout_alignParentTop="true" >
    </ListView>

    <TextView
        android:id="@+id/music_currsongtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/music_playpanel"
        android:gravity="center"
        android:padding="4sp"
        android:text=""
        android:textColor="@color/my_yellow_text" />

    <LinearLayout
        android:id="@+id/music_playpanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/music_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@null"
            android:contentDescription="@string/music_layout_back"
            android:src="@drawable/btn_backward" />

        <ImageButton
            android:id="@+id/music_play_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@null"
            android:contentDescription="@string/music_layout_play"
            android:src="@drawable/btn_play" />

        <ImageButton
            android:id="@+id/music_forward_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@null"
            android:contentDescription="@string/music_layout_forward"
            android:src="@drawable/btn_forward" />
    </LinearLayout>

</RelativeLayout>