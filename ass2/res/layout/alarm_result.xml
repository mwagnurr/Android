<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/solid_black"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/alarm_result_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/alarm_result_text"
        android:textColor="@color/my_yellow_text"
        android:textSize="18sp" />

    <Button
        android:id="@+id/alarm_result_button_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/alarm_result_stop_button"
        android:textColor="@color/my_yellow_text" />

</LinearLayout>